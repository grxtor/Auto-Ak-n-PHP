# Auto Akın - Apache Configuration
# ===================================

# Rewrite Engine
RewriteEngine On

# Force HTTPS (Exclude localhost)
RewriteCond %{HTTPS} off
RewriteCond %{HTTP_HOST} !^localhost$ [NC]
RewriteCond %{HTTP_HOST} !^127\.0\.0\.1$
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove www (optional, use one or the other)
# RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
# RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# ===== URL ROUTING - .php uzantısını kaldır =====

# Eğer /admin/dashboard yazarsa -> /admin/dashboard.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+)$ $1.php [L,QSA]

# Automatic RewriteBase detection attempt
# RewriteBase /autoakin/ 

# Eğer .php ile erişilirse, .php olmadan yönlendir (SEO temiz URL)
# API ve Admin panel işlemlerini muaf tut (POST isteklerinin bozulmaması için)
RewriteCond %{REQUEST_METHOD} GET
RewriteCond %{REQUEST_URI} !/api/
RewriteCond %{REQUEST_URI} !/admin/
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /([^/]+/)*([^.]+)\.php\ HTTP/
RewriteRule ^ %2 [NC,L,R=301]

# ===== Güvenlik =====

# Hassas dosyalara erişimi engelle
<FilesMatch "\.(env|sql|log|bak|md|json|lock)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# config klasörüne doğrudan erişimi engelle
RewriteRule ^config/ - [F,L]

# init-db'ye dışarıdan erişimi engelle (kurulum sonrası)
# RewriteRule ^init-db\.php$ - [F,L]

# ===== Performans =====

# Gzip Sıkıştırma
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css application/javascript application/json text/xml
</IfModule>

# Tarayıcı Önbelleği
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

# Güvenlik Header'ları
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# PHP Ayarları
<IfModule mod_php.c>
    php_value upload_max_filesize 16M
    php_value post_max_size 16M
    php_value max_execution_time 30
    php_flag display_errors off
</IfModule>

# Dizin Listeleme Kapalı
Options -Indexes

# Varsayılan karakter seti
AddDefaultCharset UTF-8

# Hata sayfaları
ErrorDocument 404 index.php
